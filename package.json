{
    "name": "@revertdotdev/main",
    "license": "AGPL-3.0-only",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "concurrently": "^8.2.1",
        "fern-api": "0.51.36",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "prettier": "3.3.2",
        "pretty-quick": "3.1.3",
        "typescript": "^4.8.4"
    },
    "scripts": {
        "fern": "fern generate --log-level debug --group local",
        "fern-check": "fern check",
        "fern-format": "fern format",
        "fern-upgrade": "fern upgrade --rc",
        "fern-docs:preview": "fern generate --docs --preview",
        "fern-docs": "fern generate --docs --instance revert.docs.buildwithfern.com --log-level debug",
        "build": "yarn workspaces foreach run build",
        "prepare": "husky install",
        "lint": "lint-staged",
        "dev:all": "concurrently --kill-others \"yarn workspace @revertdotdev/js dev\" \"yarn workspace @revertdotdev/backend dev\" \"yarn workspace @revertdotdev/revert-ui start\" "
    },
    "prisma": {
        "schema": "packages/backend/prisma/schema.prisma",
        "seed": "ts-node --transpile-only ./packages/backend/prisma/seed.ts"
    },
    "packageManager": "yarn@3.2.2"
}
